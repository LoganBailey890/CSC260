    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <form asp-controller="Home" asp-action="Privacy" method="post">
        <div class="spaceBetweenInputs">
            <input id="noun" type="text" name="noun" placeholder="Noun" />
