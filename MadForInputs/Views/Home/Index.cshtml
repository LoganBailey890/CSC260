        <div class="spaceBetweenInputs">
            <input id="nounPlural" type="text" name="nounPlural" placeholder="Plural Noun" />
        </div>
        <div class="spaceBetweenInputs">
            <input id="adjective" type="text" name="Adjective" placeholder="Adjective" />
        </div>
        <div class="spaceBetweenInputs">
            <input id="verb" type="text" name="Verb" placeholder="Verb" />
        </div>
        <div class="spaceBetweenInputs">
            <input id="nounPlural1" type="text" name="nounPlural1" placeholder="Plural Noun" />
