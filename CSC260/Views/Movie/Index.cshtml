@model IEnumerable<Movie>
@{
}
@if (Model == null)
{
    <h1>No movie Provided</h1>
}
else
{
    //@Model.Count()
    <h2 class="pb-2 border-bottom text-center">List of Movies</h2>
    
    <div class="container px-4 py-5 col-sm-4">
        <div class="row col-sm-4">
            @foreach(var movie in Model)
            {
                //<h3>@movie.ToString()</h3>
                <partial name="_MoviePartialView.cshtml" for="@movie" />
            }
        </div>
    </div>
    //<input type="datetime-local" />
}
