@model IEnumerable<VideoGame>
@{
}
@if(Model == null)
            {
                <h1> No Games</h1>
            }
            else
            {
                <h2 class="pb-2 border-bottom text-center header"> The Game List </h2>
                <div class="row desgin">
                    @foreach(var game in Model)
                {
                    <div class="col-sm-6 col-md-8 col-lg-6 text-center mb-3">
                        <partial name="_VideoGamePV.cshtml" for="@game" />

                    </div>
                }

                </div>
            }
